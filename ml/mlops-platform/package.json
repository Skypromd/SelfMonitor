    "winston": "^3.10.0",
    "swagger-ui-express": "^5.0.0",
    "openapi3-ts": "^4.1.2",
    "axios": "^1.5.0",
    "bull": "^4.11.3",
    "ioredis": "^5.3.2",
    "prometheus-client": "^15.0.0",
    "@opentelemetry/api": "^1.6.0",
    "@opentelemetry/auto-instrumentations-node": "^0.40.0",
    "mongodb": "^5.8.1",
    "minio": "^7.1.3",
    "kafkajs": "^2.2.4"
  },
  "devDependencies": {
    "@types/express": "^4.17.17",
    "@types/cors": "^2.8.13",
    "@types/node": "^20.5.0",
    "@typescript-eslint/eslint-plugin": "^6.4.0",
    "@typescript-eslint/parser": "^6.4.0",
    "eslint": "^8.47.0",
    "jest": "^29.6.2",
    "ts-jest": "^29.1.1",
    "ts-node-dev": "^2.0.0",
    "typescript": "^5.1.6"
