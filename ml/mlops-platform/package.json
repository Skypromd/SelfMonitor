{
  "name": "@selfmonitor/mlops-platform",
  "version": "1.0.0",
  "description": "MLOps platform with MLflow for SelfMonitor ML services",
  "main": "dist/index.js",
  "scripts": {
    "build": "tsc",
    "start": "node dist/index.js",
    "dev": "ts-node-dev --respawn --transpile-only src/index.ts",
    "train": "python scripts/training_pipeline.py",
    "deploy": "python scripts/deployment_pipeline.py",
    "monitor": "python scripts/monitoring_pipeline.py",
    "lint": "eslint src/**/*.ts && flake8 scripts/",
    "test": "jest && pytest scripts/tests/"
  },
  "dependencies": {
    "express": "^4.18.2",
    "cors": "^2.8.5",
    "helmet": "^7.0.0",
