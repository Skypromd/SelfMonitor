{
  "expo": {
    "name": "SelfMonitor",
    "slug": "selfmonitor-mobile",
    "version": "0.1.0",
    "orientation": "portrait",
    "scheme": "selfmonitor",
    "userInterfaceStyle": "automatic",
    "assetBundlePatterns": [
      "**/*"
    ],
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "com.selfmonitor.mobile",
      "infoPlist": {
        "NSCameraUsageDescription": "SelfMonitor uses camera access for receipt capture.",
        "NSUserTrackingUsageDescription": "SelfMonitor does not track users across third-party apps.",
        "NSUserNotificationUsageDescription": "SelfMonitor uses notifications for reminders and filing deadlines."
      }
    },
    "android": {
      "package": "com.selfmonitor.mobile",
      "permissions": [
        "POST_NOTIFICATIONS",
        "CAMERA"
      ]
    },
    "extra": {
      "webPortalUrlEnvVar": "EXPO_PUBLIC_WEB_PORTAL_URL",
      "easProjectIdEnvVar": "EXPO_PUBLIC_EAS_PROJECT_ID",
      "mobileRemoteConfigUrlEnvVar": "EXPO_PUBLIC_MOBILE_REMOTE_CONFIG_URL",
      "mobileAnalyticsUrlEnvVar": "EXPO_PUBLIC_MOBILE_ANALYTICS_URL"
    }
  }
}
