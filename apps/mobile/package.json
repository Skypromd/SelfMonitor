{
  "name": "mobile-app",
  "version": "0.1.0",
  "private": true,
  "description": "Native mobile shell for SelfMonitor based on Expo + WebView.",
  "main": "index.js",
  "scripts": {
    "start": "expo start",
    "android": "expo start --android",
    "ios": "expo start --ios",
    "web": "expo start --web",
    "typecheck": "tsc --noEmit",
    "build:android:preview": "npx eas build --platform android --profile preview",
    "build:ios:preview": "npx eas build --platform ios --profile preview",
    "build:android:prod": "npx eas build --platform android --profile production",
    "build:ios:prod": "npx eas build --platform ios --profile production"
  },
  "dependencies": {
    "@react-native-community/netinfo": "11.4.1",
    "expo": "^54.0.33",
    "expo-device": "~8.0.10",
    "expo-haptics": "~15.0.8",
    "expo-linear-gradient": "~15.0.8",
    "expo-local-authentication": "~17.0.8",
    "expo-notifications": "~0.32.16",
    "expo-secure-store": "~15.0.8",
    "expo-status-bar": "~3.0.9",
    "lottie-react-native": "^7.3.6",
    "react": "19.1.0",
    "react-native": "0.81.5",
    "react-native-webview": "13.15.0"
  },
  "devDependencies": {
    "@babel/core": "^7.20.0",
    "@types/react": "~19.1.10",
    "typescript": "^5.1.3"
  }
}
