# Security Service Configuration
SECURITY_SERVICE_PORT=8018
SECURITY_DATABASE_URL=postgresql://security_user:secure_password@postgres:5432/security
SECURITY_REDIS_URL=redis://redis:6379/3

# Authentication Configuration
JWT_SECRET_KEY=super-secret-jwt-key-change-in-production-environment
JWT_EXPIRES_IN=15m
SESSION_SECRET=session-secret-change-in-production-environment
MFA_ISSUER=SelfMonitor
OAUTH_CLIENT_ID=your_oauth_client_id
OAUTH_CLIENT_SECRET=your_oauth_client_secret

# SIEM Configuration
SIEM_ENDPOINT=https://elk.company.com/api
SIEM_API_KEY=your_siem_api_key
SIEM_INDEX_PREFIX=selfmonitor-security
ELASTICSEARCH_URL=https://elasticsearch:9200
ELASTICSEARCH_API_KEY=your_elasticsearch_api_key
SPLUNK_URL=https://splunk.company.com:8088
SPLUNK_TOKEN=your_splunk_token

# Threat Intelligence Configuration
VIRUSTOTAL_API_KEY=your_virustotal_api_key
ABUSEIPDB_API_KEY=your_abuseipdb_api_key
CROWDSTRIKE_API_KEY=your_crowdstrike_api_key
OTX_API_KEY=your_otx_api_key

# Compliance Configuration
SOC2_COMPLIANCE_ENDPOINT=https://compliance.company.com/api
AUDIT_LOG_RETENTION_DAYS=2555
GDPR_DPO_EMAIL=dpo@selfmonitor.com

# Notification Configuration
SLACK_WEBHOOK_URL=https://hooks.slack.com/services/YOUR/SLACK/WEBHOOK
EMAIL_SMTP_HOST=smtp.company.com
EMAIL_SMTP_PORT=587
EMAIL_USERNAME=security@selfmonitor.com
EMAIL_PASSWORD=your_email_password

# Network Security Configuration
ALLOWED_ORIGINS=https://app.selfmonitor.com,https://admin.selfmonitor.com
WAF_ENABLED=true
DDOS_PROTECTION_ENABLED=true
RATE_LIMIT_GLOBAL=1000
RATE_LIMIT_PER_USER=100
RATE_LIMIT_PER_IP=500

# Security Thresholds
ANOMALY_THRESHOLD_LOW=30
ANOMALY_THRESHOLD_MEDIUM=60
ANOMALY_THRESHOLD_HIGH=80
REPUTATION_THRESHOLD_MALICIOUS=80
REPUTATION_THRESHOLD_SUSPICIOUS=60
HIGH_RISK_THRESHOLD=75
MEDIUM_RISK_THRESHOLD=50

# Monitoring Configuration
PROMETHEUS_ENABLED=true
JAEGER_ENDPOINT=http://jaeger:14268/api/traces
METRICS_PORT=9090

# Development/Testing Configuration (remove in production)
NODE_ENV=development
LOG_LEVEL=debug
ENABLE_SWAGGER=true
SECURITY_TESTING_MODE=false