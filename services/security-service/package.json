{
  "name": "security-service",
  "version": "1.0.0",
  "description": "Enterprise-grade security management and monitoring service for SelfMonitor",
  "main": "dist/index.js",
  "scripts": {
    "build": "tsc",
    "start": "node dist/index.js",
    "dev": "ts-node-dev --respawn --transpile-only src/index.ts",
    "test": "jest --detectOpenHandles",
    "test:security": "jest --testPathPattern=security --detectOpenHandles",
    "test:pentest": "npm run test:security && node scripts/penetration-tests.js",
    "test:compliance": "jest --testPathPattern=compliance --detectOpenHandles",
    "scan:vulnerabilities": "npm audit && snyk test",
    "benchmark:security": "node scripts/security-benchmark.js",
    "lint": "eslint src/**/*.ts",
    "lint:fix": "eslint src/**/*.ts --fix",
    "format": "prettier --write src/**/*.ts",
    "docker:build": "docker build -t security-service .",
    "docker:run": "docker run -p 8018:8018 security-service",
    "k8s:deploy": "kubectl apply -f k8s/",
    "siem:deploy": "node scripts/deploy-siem.js",
    "generate-keys": "node scripts/generate-security-keys.js",
    "compliance:report": "node scripts/generate-compliance-report.js"
  },
  "keywords": [
    "security",
    "siem", 
    "zero-trust",
    "compliance",
    "threat-detection",
    "authentication",
    "authorization",
    "fintech",
    "enterprise"
  ],
  "author": "SelfMonitor Security Team",
  "license": "PROPRIETARY",
