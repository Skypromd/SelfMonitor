{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "PartnerTransactionBatch",
  "type": "object",
  "required": [
    "schema_version",
    "source_system",
    "user_reference",
    "account_id",
    "transactions"
  ],
  "properties": {
    "schema_version": {
      "type": "string",
      "const": "1.0"
    },
    "source_system": {
      "type": "string",
      "description": "Name of the partner system producing the batch."
    },
    "batch_id": {
      "type": "string",
      "format": "uuid",
      "description": "Optional idempotency key for the batch."
    },
    "user_reference": {
      "type": "string",
      "description": "Partner user identifier used for mapping."
    },
    "account_id": {
      "type": "string",
      "format": "uuid",
      "description": "Internal account UUID within our system."
    },
    "tax_year": {
      "type": "string",
      "pattern": "^\\d{4}-\\d{2}-\\d{2}/\\d{4}-\\d{2}-\\d{2}$",
      "description": "Optional tax year range (e.g. 2023-04-06/2024-04-05)."
    },
    "transactions": {
      "type": "array",
      "minItems": 1,
      "items": {
        "$ref": "#/$defs/Transaction"
      }
    },
    "metadata": {
      "type": "object",
      "additionalProperties": true
    }
  },
  "$defs": {
    "Transaction": {
      "type": "object",
      "required": [
        "provider_transaction_id",
        "date",
        "description",
        "amount",
        "currency"
      ],
      "properties": {
        "provider_transaction_id": {
          "type": "string",
          "description": "Unique transaction id from the provider."
        },
        "date": {
          "type": "string",
          "format": "date"
        },
        "description": {
          "type": "string"
        },
        "amount": {
          "type": "number",
          "description": "Signed amount. Positive for income, negative for expense."
        },
        "currency": {
          "type": "string",
          "minLength": 3,
          "maxLength": 3,
          "description": "ISO 4217 currency code (e.g. GBP)."
        },
        "category": {
          "type": "string",
          "description": "Optional partner category."
        },
        "tax_category": {
          "type": "string",
          "description": "Optional SA103 category override."
        },
        "business_use_percent": {
          "type": "number",
          "minimum": 0,
          "maximum": 100,
          "description": "Business-use percentage (0-100)."
        },
        "tags": {
          "type": "array",
          "items": {
            "type": "string"
          }
        },
        "is_reversal": {
          "type": "boolean"
        },
        "merchant_name": {
          "type": "string"
        }
      }
    }
  }
}
