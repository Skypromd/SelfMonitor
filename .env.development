# SelfMonitor Development Environment Variables
# Copy this file to .env.local for local development

# Application Environment
ENVIRONMENT=development
DEBUG=true
LOG_LEVEL=DEBUG

# Database Configuration
DATABASE_URL=postgresql://user:password@localhost:5432/selfmonitor_dev
DATABASE_POOL_SIZE=20
DATABASE_MAX_OVERFLOW=10

# Redis Configuration  
REDIS_URL=redis://localhost:6379/0
REDIS_CACHE_TTL=3600

# Authentication & Security
JWT_SECRET_KEY=dev_secret_key_change_in_production
JWT_ALGORITHM=HS256
JWT_ACCESS_TOKEN_EXPIRE_MINUTES=30
JWT_REFRESH_TOKEN_EXPIRE_DAYS=7

# External Services
OPENAI_API_KEY=your_openai_api_key_here
ANTHROPIC_API_KEY=your_anthropic_api_key_here

# Banking APIs (Development/Sandbox)
PLAID_CLIENT_ID=your_plaid_client_id
PLAID_SECRET=your_plaid_secret
PLAID_PUBLIC_KEY=your_plaid_public_key
PLAID_ENV=sandbox

# Stripe Configuration (Test Mode)
STRIPE_SECRET_KEY=sk_test_your_stripe_secret_key
STRIPE_PUBLISHABLE_KEY=pk_test_your_stripe_publishable_key
STRIPE_WEBHOOK_SECRET=whsec_your_webhook_secret

# Email Configuration (Development)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=noreply@selfmonitor.dev
SMTP_PASSWORD=your_email_password
FROM_EMAIL=noreply@selfmonitor.dev

# Monitoring & Observability
SENTRY_DSN=your_sentry_dsn_for_development
JAEGER_AGENT_HOST=localhost
JAEGER_AGENT_PORT=6831
PROMETHEUS_PORT=9090
GRAFANA_PORT=3000

# Kafka Configuration
KAFKA_BOOTSTRAP_SERVERS=localhost:9092
KAFKA_SECURITY_PROTOCOL=PLAINTEXT

# ML/AI Service Configuration
MLFLOW_TRACKING_URI=http://localhost:5000
MLFLOW_ARTIFACT_ROOT=./mlruns
MODEL_REGISTRY_URI=http://localhost:5000

# API Gateway Configuration
API_GATEWAY_URL=http://localhost:8080
GRAPHQL_ENDPOINT=http://localhost:4000/graphql

# Feature Flags
ENABLE_AI_RECOMMENDATIONS=true
ENABLE_ADVANCED_ANALYTICS=true
ENABLE_REAL_TIME_NOTIFICATIONS=true
ENABLE_COMPLIANCE_MONITORING=true

# Development Tools
ENABLE_API_DOCS=true
ENABLE_DEBUG_TOOLBAR=true
AUTO_RELOAD=true

# Mobile App Configuration
MOBILE_APP_SCHEME=selfmonitor://
DEEP_LINK_BASE_URL=https://dev.selfmonitor.com

# Internationalization
DEFAULT_LANGUAGE=en
SUPPORTED_LANGUAGES=en,ru,es,fr,de

# File Storage
STORAGE_TYPE=local
STORAGE_PATH=./uploads
MAX_FILE_SIZE_MB=50

# Rate Limiting
RATE_LIMIT_PER_MINUTE=1000
RATE_LIMIT_BURST=100

# Session Configuration
SESSION_SECRET_KEY=dev_session_secret_change_in_production
SESSION_COOKIE_SECURE=false
SESSION_COOKIE_HTTPONLY=true
SESSION_LIFETIME_HOURS=24